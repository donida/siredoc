<%- model_class = Cartorio -%>
                <hr style="margin: 5px">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comarca_id) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.comarca_id == nil ? 'Não informado' : @cartorio.comarca.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cidade_id) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.cidade_id == nil ? 'Não informado' : @cartorio.cidade.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bairro) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.bairro %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rua) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.rua %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cep) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.cep %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:celular) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.celular %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:historico) %>:</strong></dt>
  <dd>&nbsp;<%= @cartorio.historico %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cartorios_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cartorio_path(@cartorio), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cartorio_path(@cartorio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
