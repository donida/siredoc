<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :builder => MNE::TwitterBootstrapFormBuilder::FormBuilder, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :autofocus => true %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
  <% end %>
  <%= f.password_field :password, :autocomplete => "off" %>
  <%= f.password_field :password_confirmation %>
  <%= f.password_field :current_password %>
  <div class="form-actions">
  	<%= f.submit "Atualizar", :class => 'btn btn-primary' %>
  </div>
<% end %>
<h3>Cancelar minha conta</h3>
<p>
	Insatisfeito? 
  <div class="form-actions">
	<%= button_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Você tem certeza?" }, :method => :delete, :class => 'btn btn-primary' %>
  </div>
</p>
