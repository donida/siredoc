<h2>Esqueceu sua Senha?</h2>

<%= form_for(resource, :as => resource_name, :builder => MNE::TwitterBootstrapFormBuilder::FormBuilder, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true %>

  <div class="form-actions">
  	<%= f.submit "Envie-me instruções para resgatar minha conta", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
