<h2>Reenviar Instuções de Desbloqueio</h2>

<%= form_for(resource, :as => resource_name, :builder => MNE::TwitterBootstrapFormBuilder::FormBuilder, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>

  <%= f.email_field :email, :autofocus => true %>

  <div class="form-actions">
  	<%= f.submit "Reenviar instrucoes de desbloqueio", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
