<!DOCTYPE html>
<html>
	<head>
		<title>Siredoc</title>
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
		<![endif]-->
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= stylesheet_link_tag 'gmaps4rails' %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
		<div class="container" >
			<h2 style="margin-bottom: 0px">SIREDOC</h2>
			<p>
				<small>Associação dos Oficiais do Registro Civil
			</p>
			<div class="navbar navbar-inverse">
				<div class="navbar-inner">
					<div class="container">
						<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
						<div class="nav-collapse">
							<ul class="nav nav-pills">
								<% if user_signed_in? %>
								<% if current_user.admin? %>
								<li>
									<%= link_to "Atribuição", atribuicaos_path %>
								</li>
								<li>
									<%= link_to "Comarca", comarcas_path %>
								</li>
								<li>
									<%= link_to "Tipo de Registro", tipo_registros_path %>
								</li>
								<li>
									<%= link_to "Estado", estados_path %>
								</li>
								<li>
									<%= link_to "Cidade", cidades_path %>
								</li>
								<% end %>
								<li>
									<%= link_to "Usuário", users_path %>
								</li>
								<li>
									<%= link_to "Registro", cartorios_path %>
								</li>
								<li>
									<%= link_to "Trocar Senha", edit_user_path(current_user.id) %>
								</li>
								<li>
									<%= link_to "Sair", destroy_user_session_path, :method=>'delete' %>
								</li>
								<% else %>
								<li>
									<%= link_to "Entrar", new_user_session_path, :method => 'new' %>
								</li>
								<li>
									<%= link_to "Esqueci Minha Senha", new_user_password_path %>
								</li>
								<% end %>
								<li>
									<%= link_to "Fale Conosco" %>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="container">
				<div class="row">
					<div class="span12">
						<% if notice != nil && notice != '' %>
						<p class="notice">
							<%= notice %>
						</p>
                      <% end %>
                      <% if alert != nil && alert != '' %>
						<p class="alert">
							<%= alert %>
						</p>
                      <% end %>
						<%= yield %>
						<%= yield :scripts %>
					</div>
				</div>
			</div>
		</div>
		<div class="container">  
                <hr style="margin: 10px">
                <footer>
                   <p align="center">&copy; Revolua IT Services - 2013</p>
                 </footer>
             </div>
	</body>
</html>
