<%- model_class = Atribuicao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:chave) %></th>
      <th><%= model_class.human_attribute_name(:tipoRegistro_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @atribuicaos.each do |atribuicao| %>
      <tr>
        <td><%= link_to atribuicao.id, atribuicao_path(atribuicao) %></td>
        <td><%= atribuicao.name %></td>
        <td><%= atribuicao.chave %></td>
        <td><%= TipoRegistro.all.find_by_id(atribuicao.tipoRegistro_id).nome %></td>
        <td><%=l atribuicao.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_atribuicao_path(atribuicao), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      atribuicao_path(atribuicao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_atribuicao_path,
            :class => 'btn btn-primary' %>
